@using TestApplication.ViewModels;
@model ApartmentCreateViewModel;
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    Layout = "_Layout";
}
<div class="container circled-white-back">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <form method="post" class="w-100">
        <div class="form-group my-2">
            <label asp-for="Number" class="control-label"></label>
            <input asp-for="Number" class="form-control w-100" />
            <span asp-validation-for="Number" class="text-danger"></span>
        </div>
        <div class="form-group my-2">
            <label asp-for="AdressId" class="control-label"></label>
            <div class="d-flex w-100">
                <select asp-for="AdressId" id="streetSelect" class="w-100 me-2">
                    @foreach (var item in Model.Adresses)
                    {
                        <option value="@item.Id">@item.StreetName / @item.Number</option>
                    }
                </select>
                <a asp-action="Create" asp-controller="Adresses" class="btn btn-primary">Добавить адрес</a>
            </div>

            <span asp-validation-for="AdressId" class="text-danger"></span>
        </div>
        <input class="btn btn-primary my-3" type="submit" value="Сохранить" />
    </form>
</div>
