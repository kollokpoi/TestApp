@using TestApplication.ViewModels;
@model CounterReadingViewModel;
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = "_Layout";
}

<div class="container circled-white-back">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <form method="post" class="w-100">
        <input type="hidden" asp-for="CounterId"/>
        <div class="form-group my-2">
            <label asp-for="Value" class="control-label"></label>
            <input asp-for="Value" class="form-control w-100" />
            <span asp-validation-for="Value" class="text-danger"></span>
        </div>
        <div class="form-group my-2">
            <label asp-for="DateOfReading" class="control-label"></label>
            <input asp-for="DateOfReading" class="form-control w-100" />
            <span asp-validation-for="DateOfReading" class="text-danger"></span>
        </div>
        <input class="btn btn-primary my-3" type="submit" value="Сохранить" />
    </form>
</div>
